<%= form_for [@department,@item] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true%>
  <br  />
  <%= f.label :price %>
  <%= f.text_field :price %>
  <br  />
  <%= f.label :available %>
  <%= f.select :available, [true, false]%>
  <br  />
  <%= f.submit %>
  <% end %>
  <%= link_to 'Back', [@department, @item] %>
